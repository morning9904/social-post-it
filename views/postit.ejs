<%- include ("partiejs/header.ejs")%>
  <!-- import font scritte-->
  <style>
    @import url("https://fonts.googleapis.com/css?family=Poppins:400,500,600,700,800,900");
    @import url('https://fonts.googleapis.com/css2?family=Kalam&display=swap');

    /* posizionamento */ 
    .sticky-container {
      max-width: 270px;
      position: relative;
    }
     
    .sticky-outer {
      display: flex;
      padding-top: 92.5925926%;
      position: relative;
    
      width: 100%;
    }
    
    .sticky {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
    
    /* ombra dietro il post-it */
    .sticky:before {
      box-shadow: -2px 2px 15px 0 rgba(0, 0, 0, 0.5);
      background-color: rgba(0, 0, 0, 0.25);
      content: '';
      width: 90%;
      left: 5px;
      height: 75%;
      position: absolute;
      top: 30%;
    }
    
    /* il post-it in se */
    .sticky-content {
      background: linear-gradient(
        180deg,
        rgba(187, 235, 255, 1) 0%,
        rgba(187, 235, 255, 1) 12%,
        rgba(170, 220, 241, 1) 75%,
        rgba(195, 229, 244, 1) 100%
      );
      width: 100%;
      height: 100%;
    
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Kalam', cursive;
      font-size: 1.25rem;
    
      clip-path: url(#stickyClip);
    }
    
    
    /* posizionamento post-it, cosi risulta piu bello */
    html,
    body {
      height: 100%;
      margin: 0;
      font-size: 16px;
    }
    
    .container {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 50%;
      height: 50%;
    }
    .container-inner {
      width: 50%;
      margin: 25px;
    }
    
    /* responsivit√† */
    @media screen and (min-width: 640px) {
      .sticky-content {
        font-size: 1.5rem;
      }
      .container-inner {
        width: 50%;
      }
    }
    
    @media screen and (min-width: 768px) {
      .sticky-content {
        font-size: 1.5rem;
      }
      .container-inner {
        width: 50%;
      }
    }
    
    @media screen and (min-width: 1024px) {
      .sticky-content {
        font-size: 1.875rem;
      }
      .container-inner {
        width: 25%;
      }
    }
    
    body {
      font-family: "Poppins", sans-serif;
      font-weight: 300;
      font-size: 15px;
      line-height: 1.7;
      color: #000000;
      width: 100%;
      height: 100%;
      background-color: #2a2b38;
      background-image: url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg");
      background-position: bottom center;
      background-repeat: no-repeat;
      background-size: 200%;
      overflow-x: hidden;
    }

    .tbl-content{
      height:80vh;
      overflow-x:auto;
      margin-top: 0px;
      border: 1px solid rgba(255,255,255,0.3);
      padding: 20px;
    }
        
    section{
      margin-left: 40px;
      margin-right: 40px;
      margin-top: 75px;
    }

    ::-webkit-scrollbar {
        width: 6px;
    } 

    ::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    } 

    ::-webkit-scrollbar-thumb {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    }

  </style>
  <script>
   window.onload = function() {
      document.onselectstart = function() { return false; }
    }
</script>
  
  <section>
  
    <!--questo serve a creare il post-it in se -->
  <div class="tbl-content">
    <% 
      data.forEach(function(dato) { %>
      <div class="container">
        <div class="container-inner">
          <div class="sticky-container">
            <div class="sticky-outer">
              <div class="sticky">
                <svg width="0" height="0">
                  <defs>
                    <clipPath id="stickyClip" clipPathUnits="objectBoundingBox">
                      <path
                            d="M 0 0 Q 0 0.69, 0.03 0.96 0.03 0.96, 1 0.96 Q 0.96 0.69, 0.96 0 0.96 0, 0 0"
                            stroke-linejoin="round"
                            stroke-linecap="square"
                            />  
                    </clipPath>
                  </defs>
                </svg>
                <div class="sticky-content">
                  <%= dato.Nome %><br>
                  <%= dato.Nickname %>
                  <%= dato.Punti %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>
     <% }); %>
  </div>
</section>